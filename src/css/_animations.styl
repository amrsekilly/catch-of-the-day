/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/

// when the user adds a new item to the order
.order-enter
  transition all 0.7s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)

// when the user attempts to remove an item from the order 
.order-leave
  transition all 0.7s
  transform translateX(0)
  &.order-leave-active
    transform translateX(120%)
    max-height 0
    padding 0


// animate the counter of the order 
// the new count 
.count-enter
  transition all .25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0) // put it in it's normal resting spot
// the old count should leave 
.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active
    transform translateY(-100%) // start it where it is
